# Environment variables for the Food Delivery API

# API Configuration
APP_NAME="Food Delivery Time Prediction API"
VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Security
SECRET_KEY="your-super-secret-key-change-in-production"
ALLOWED_HOSTS="*"
CORS_ORIGINS="*"

# Model Configuration
MODEL_PATH="../model_pipeline/saved_models/best_model.joblib"
PREPROCESSOR_PATH="../model_pipeline/saved_models/preprocessor.joblib"
MODEL_RELOAD_INTERVAL=3600

# Logging
LOG_LEVEL="INFO"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30

# Database (optional)
DATABASE_URL="sqlite:///./requests.db"
